{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1",
      "headers": {
        "cache-control": "s-maxage=3600"
      }
    }
  ],
  "functions": {
    "api/*.js": {
      "maxDuration": 10,
      "memory": 1024
    }
  }
}
