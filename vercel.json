{
  "version": 2,
  "buildCommand": null,
  "outputDirectory": "public",
  "framework": "static",
  "functions": {
    "api/*.js": {
      "maxDuration": 5,
      "memory": 512
    }
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1",
      "headers": {
        "Cache-Control": "public, max-age=3600"
      }
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
